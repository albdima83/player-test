{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"lib": ["ESNext", "DOM"],
		"strict": true,
		"esModuleInterop": true,
		"moduleResolution": "bundler",
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"declaration": true,
		"outDir": "dist",
		"baseUrl": ".",
		"types": ["node"]
	},
	"include": ["src/**/*"]
}
